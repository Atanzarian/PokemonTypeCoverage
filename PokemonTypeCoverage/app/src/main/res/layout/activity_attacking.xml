<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attacking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ams3141.pokemontypecoverage.Attacking">




    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Spinner
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_below="@id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/find_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Search"
            android:onClick="onClickFindTypes"
            />
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Reset"
            android:onClick="clearTotals"
            />
        <Button
            android:id="@+id/defence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Go Defence"
            android:onClick="start_coverage"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/headers"
        android:layout_below="@id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Types"
            android:layout_weight="1.5"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Total"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/res"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Resistant"
            android:layout_weight="1.3"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/weak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Strong"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/imm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Immune"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_below="@id/headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ListView
            android:id="@+id/coverage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_alignLeft="@+id/find_beer"
            android:layout_below="@+id/find_beer"

            />
        <ListView
            android:id="@+id/types"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/find_beer"
            android:layout_below="@+id/find_beer"
            android:text="@string/types"
            />
        <ListView
            android:id="@+id/resistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignLeft="@+id/find_beer"
            android:layout_below="@+id/find_beer"

            />
        <ListView
            android:id="@+id/weaknesses"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/find_beer"
            android:layout_below="@+id/find_beer"

            />
        <ListView
            android:id="@+id/immunes"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/find_beer"
            android:layout_below="@+id/find_beer"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"


        >
        <TextView
            android:id="@+id/rating_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/average_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/rating_text"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/totals"
        android:layout_below="@id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"


        >
        <TextView
            android:id="@+id/total_totals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Totals:"
            android:layout_alignParentBottom="true"
            android:layout_weight="1.7"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/total_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/rating_text"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/total_res"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/rating_text"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/total_weak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/rating_text"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/total_imm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/rating_text"
            android:text=""
            android:layout_alignParentBottom="true"
            android:layout_weight=".5"
            android:textSize="14sp"
            />

    </LinearLayout>





</RelativeLayout>
